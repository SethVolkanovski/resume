    <!-- Modal -->
    <div x-show="showModal" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
         x-transition:leave="transition ease-in duration-200" x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0"
         class="fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50 p-4" style="display: none;" @click.self="showModal = false" role="dialog" aria-modal="true" :aria-label="modalContent === 'vocabulary' ? 'واژگان احساسی' : modalContent === 'grammar' ? 'گرامر بیانگر' : modalContent === 'quotes' ? 'نقل‌قول‌های الهام‌بخش' : 'ویدیو معرفی'">
        <div class="bg-white rounded-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="sticky top-0 bg-white p-4 border-b border-gray-200 flex justify-between items-center rounded-t-2xl">
                <h3 class="text-xl font-semibold" x-text="modalContent === 'vocabulary' ? 'واژگان احساسی' : modalContent === 'grammar' ? 'گرامر بیانگر' : modalContent === 'quotes' ? 'نقل‌قول‌های الهام‌بخش' : 'ویدیو معرفی'"></h3>
                <button @click="showModal = false" class="text-gray-500 hover:text-gray-700 focus-visible" aria-label="Close modal">
                    <i data-lucide="x" class="w-6 h-6"></i>
                </button>
            </div>
            <div class="p-6">
                <template x-if="modalContent === 'vocabulary'">
                    <div>
                        <p class="text-gray-600 mb-6">مجموعه‌ای از کلمات واژگان احساسی ما را کشف کنید که به شما کمک می‌کنند خود را به طور دقیق‌تری در انگلیسی بیان کنید.</p>
                        <div class="grid gap-4">
                            <div class="p-4 bg-primary-50 rounded-lg">
