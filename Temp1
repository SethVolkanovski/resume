<body x-data="{ mobileMenuOpen: false, language: localStorage.getItem('language') || 'fa', activeSection: 'home', currentTestimonial: 0, showModal: false, modalContent: '' }"
      :class="{ 'overflow-hidden': mobileMenuOpen }"
      @scroll.window.throttle.100ms="
        if (window.scrollY > 50) {
          document.getElementById('navbar').classList.add('shrink')
        } else {
          document.getElementById('navbar').classList.remove('shrink')
        }

        // Update progress bar
        const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
        const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
        const scrolled = (winScroll / height) * 100;
        document.getElementById('progress-bar').style.width = scrolled + '%';

        // Update active section for sticky nav
        const sections = document.querySelectorAll('section[id]');
        sections.forEach(section => {
          const sectionTop = section.offsetTop;
          const sectionHeight = section.clientHeight;
          if (window.scrollY >= sectionTop - 100 && window.scrollY < sectionTop + sectionHeight - 100) {
            activeSection = section.id;
          }
        });

        // Show/hide back to top button
        const backToTop = document.getElementById('back-to-top');
        if (window.scrollY > 500) {
            backToTop.classList.remove('opacity-0', 'invisible');
            backToTop.classList.add('opacity-100', 'visible');
        } else {
            backToTop.classList.remove('opacity-100', 'visible');
            backToTop.classList.add('opacity-0', 'invisible');
        }
      ">

    <!-- Progress Bar -->
    <div class="progress-bar" id="progress-bar"></div>

    <!-- Navigation -->
    <header id="navbar" class="navbar">
        <div class="container mx-auto px-4 md:px-6">
            <div class="flex justify-between items-center">
                <a href="#home" class="flex items-center space-x-2" @click.prevent="mobileMenuOpen = false; scrollToSection('#home')">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-600 to-secondary-600 flex items-center justify-center text-white font-bold text-xl">آ</div>
                    <span class="text-xl font-bold text-white logo-text transition-colors duration-300">آنجلا</span>
                </a>

                <nav class="hidden md:flex items-center space-x-8">
                    <a href="#home" class="nav-link text-white hover:text-white transition-colors font-medium" :class="{ 'active text-white': activeSection === 'home' }" @click.prevent="scrollToSection('#home')">خانه</a>
                    <a href="#lessons" class="nav-link text-white hover:text-white transition-colors font-medium" :class="{ 'active text-white': activeSection === 'lessons' }" @click.prevent="scrollToSection('#lessons')">دروس</a>
                    <a href="#methods" class="nav-link text-white hover:text-white transition-colors font-medium" :class="{ 'active text-white': activeSection === 'methods' }" @click.prevent="scrollToSection('#methods')">روش‌ها</a>
                    <a href="#testimonials" class="nav-link text-white hover:text-white transition-colors font-medium" :class="{ 'active text-white': activeSection === 'testimonials' }" @click.prevent="scrollToSection('#testimonials')">نظرات</a>
                    <a href="#about" class="nav-link text-white hover:text-white transition-colors font-medium" :class="{ 'active text-white': activeSection === 'about' }" @click.prevent="scrollToSection('#about')">درباره</a>
                </nav>

                <div class="flex items-center space-x-4">
                    <!-- Language Toggle -->
                    <div class="language-toggle ml-4">
                        <input type="checkbox" id="language-toggle" class="language-toggle-checkbox"
                               :checked="language === 'en'"
                               @change="language = language === 'fa' ? 'en' : 'fa'; localStorage.setItem('language', language); updateLanguage()">
                        <label for="language-toggle" class="language-toggle-label">
                            <span class="language-text en">EN</span>
                            <span class="language-text fa">FA</span>
                        </label>
                    </div>

                    <button class="hidden md:block bg-white text-primary-600 px-6 py-2 rounded-full hover:shadow-lg transition-all font-medium hover:bg-opacity-90 hover-lift focus-visible">
                        شروع کنید
                    </button>

                    <button @click="mobileMenuOpen = !mobileMenuOpen" class="md:hidden text-white focus-visible" aria-label="Toggle menu" :aria-expanded="mobileMenuOpen">
                        <i data-lucide="menu" x-show="!mobileMenuOpen"></i>
                        <i data-lucide="x" x-show="mobileMenuOpen"></i>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Improved Mobile Navigation Overlay -->
    <div class="mobile-nav-overlay" :class="{ 'active': mobileMenuOpen }" x-show="mobileMenuOpen" x-transition @click.self="mobileMenuOpen = false"
         aria-hidden="true" aria-label="Mobile navigation" role="dialog">
        <div class="mobile-nav-content">
            <div class="mobile-nav-header">
                <div class="flex items-center space-x-2">
                    <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-primary-600 font-bold text-xl">آ</div>
                    <span class="text-xl font-bold text-white">آنجلا</span>
                </div>
                <button @click="mobileMenuOpen = false" class="mobile-nav-close focus-visible" aria-label="Close menu">
                    <i data-lucide="x"></i>
                </button>
            </div>

            <div class="mobile-nav-links">
                <a href="#home" class="mobile-nav-link focus-visible" @click.prevent="mobileMenuOpen = false; scrollToSection('#home')">
